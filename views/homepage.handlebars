<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="card">
  <div class="card-header">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p class="post-info">Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div>
    <p class="card-desc">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}